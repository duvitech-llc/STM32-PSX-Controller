{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "STM32H753 Debug (OpenOCD)",
            "type": "cortex-debug",
            "request": "launch",

            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/Debug/demo-code.elf",

            "servertype": "openocd",
            "gdbPath": "/opt/toolchains/arm-gnu-toolchain-15.2.rel1-x86_64-arm-none-eabi/bin/arm-none-eabi-gdb",

            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32h7x.cfg"
            ],

            "runToEntryPoint": "main",
            "svdFile": "STM32H753.svd"
        }
    ]
}
